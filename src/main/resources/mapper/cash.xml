<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="CashDao">

	<insert id="addCash"  parameterType="com.bbc.entity.Cash" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO u_cash (user_id,amount,data_status,remark,add_time) VALUES(#{userId},#{amount},#{dataStatus},#{remark},NOW())
	</insert>

	<select id="getCashList" parameterType="string"  resultType="com.bbc.entity.Cash">
		SELECT id,amount,data_status,remark FROM h_user WHERE user_id =#{userId}
		<if test="#{dataStatus != 0}">
			AND data_status = 2
		</if>
		LIMIT 10;
	</select>

	<update id="update" parameterType="map">
		UPDATE u_cash SET data_status =#{dataStatus} ,update_time = #{updateTime} WHERE id = #{id} AND user_id = #{userId}
	</update>


</mapper>